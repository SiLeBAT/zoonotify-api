      "AntiBioticResistenceProfile": {
        "type": "object",
        "required": [
          "value",
          "active"
        ],
        "properties": {
          "value": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          }
        }
      },
      "FilterArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/FilterValues"
        }
      },
      "FilterValues": {
        "type": "string",
        "description": "Includes the appropriate selectable data values",
        "enum": [
          "alle Werte",
          "<filter specific values>"
        ],
        "default": "alle Werte"
      },
