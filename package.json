{
  "name": "zoonotify-server",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "node ./lib/main.js",
    "serve": "npx nodemon -e ts --exec \"npm run serve:pipe\"",
    "debug": "npx nodemon -e ts --exec \"npm run debug:pipe\"",
    "serve:pipe": "npm run build && node ./lib/main.js",
    "debug:pipe": "npm run build && node --inspect-brk ./lib/main.js",
    "dependency-check:production": "npx npm-auditor-ci --threshold low -ignoreDev",
    "dependency-check:qa": "npx npm-auditor-ci --threshold low",
    "cp:json": "npx copyfiles -u 1 ./src/**/*.json ./lib",
    "cp:all": "npm run cp:json",
    "tsc": "tsc",
    "build": "npm run tsc && npm run cp:all",
    "prebuild": "npm run clean",
    "clean": "npx rimraf lib/*",
    "lint": "tslint --project tsconfig.json --fix -c tslint.json 'src/**/*.ts'",
    "pretty": "prettier --write \"src/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "./hooks/commit-msg ./.git/COMMIT_EDITMSG"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.ts": [
        "npm run pretty",
        "npm run lint",
        "git add"
      ]
    },
    "ignore": [
      "src/**/__mocks__/*.ts",
      "src/**/__tests__/*.ts"
    ]
  },
  "private": true,
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "compression": "^1.7.3",
    "config": "^1.29.4",
    "core-js": "^2.5.3",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "helmet": "^3.21.1",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "jsonwebtoken": "^8.1.0",
    "linebyline": "^1.3.0",
    "lodash": "^4.17.14",
    "moment": "^2.20.1",
    "morgan": "^1.9.1",
    "processenv": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "rxjs": "^6.2.1",
    "swagger-ui-express": "^4.0.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/app-root-dir": "^0.1.0",
    "@types/compression": "0.0.36",
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/express-jwt": "^0.0.40",
    "@types/fs-readfile-promise": "^3.0.0",
    "@types/helmet": "0.0.42",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/lodash": "^4.14.104",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.3.6",
    "@types/reflect-metadata": "^0.1.0",
    "@types/request": "^2.48.3",
    "@types/request-promise-native": "^1.0.17",
    "@types/swagger-ui-express": "^3.0.0",
    "copyfiles": "^2.1.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.4.0",
    "rimraf": "^3.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^3.4.0"
  },
  "zoonotifyConfig": {
    "lastChange": "2019-04-16 11:25:17 +0200"
  }
}
